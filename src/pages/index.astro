---
import Layout from '../components/Layout.astro';
---

<Layout title="Luna's 8th Birthday Party">
	<main>
    <div id="content" style="background-color: #FFC0CB; text-align: center; padding: 50px;">
      <div class="header">
        <h1 style="color: #FF69B4; font-size: 3em;">ðŸŽ‰ Luna Gaglardi's 8th Birthday Party ðŸŽ‰</h1>
        <div class="logo">
          <img src="https://example.com/path-to-your-party-theme-image.png" alt="Party Theme Image">
        </div>
        <h2 style="color: #FF1493; font-size: 2em;">
          Join us for a day full of fun, games, and cake as we celebrate Luna turning 8!
        </h2>
      </div>
			<div class="party-details" style="color: #FF1493; font-size: 1.5em;">
        <p>Date: [Party Date]</p>
        <p>Time: [Party Time]</p>
        <p>Location: [Party Location]</p>
      </div>
      <div class="rsvp-form">
        <form name="rsvp" method="POST" data-netlify="true">
          <input type="hidden" name="form-name" value="rsvp" />
          <p>
            <label>Your Name: <input type="text" name="name" required /></label>
          </p>
          <p>
            <label>Your Email: <input type="email" name="email" required /></label>
          </p>
          <p>
            <label>Will you attend? <select name="attendance" required><option value="">Choose...</option><option value="yes">Yes</option><option value="no">No</option></select></label>
          </p>
          <p>
            <button type="submit" style="background-color: #FF69B4; color: white; padding: 10px 20px; text-decoration: none;">Submit RSVP</button>
          </p>
        </form>
      </div>
    </div>
	</main>
</Layout>